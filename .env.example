# Model Configuration
MODEL_NAME=facebook/pe-av-large
MODEL_CACHE_DIR=/tmp/models
DEVICE=cpu

# Hugging Face Mirror (optional, use if default huggingface.co is blocked)
# Common mirrors: https://hf-mirror.com, https://hf-mirror.xyz
HF_ENDPOINT=https://hf-mirror.com

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/trenton.db

# Monitoring
INDEXING_CONCURRENT_JOBS=5
FILE_EVENT_COOLDOWN_SECONDS=2.0
INDEXING_BATCH_SIZE=10

# Search
DEFAULT_TOP_K=10
DEFAULT_THRESHOLD=0.0
MAX_TOP_K=100

# API
API_TITLE=Trenton Multimodal Search API
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
